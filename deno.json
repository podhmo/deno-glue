{
  "name": "@podhmo/glue",
  "version": "0.2.2",
  "license": "MIT",
  "exports": {
    ".": "./main.ts",
    "./mini-webapp": "./src/mini-webapp.ts"
  },
  "publish": {
    "include": [
      "README.md",
      "LICENSE",
      "deno.json",
      "*.ts",
      "vendor/**/*.ts",
      "examples/serve-command-example/**"
    ]
  },
  "tasks": {
    "check": "deno check src/**/*.ts testdata/**/*.ts testdata/**/*.tsx",
    "ok": "deno lint && deno task check && deno test --allow-read --allow-write --allow-net"
  },
  "fmt": {
    "exclude": [
      "testdata/"
    ]
  },
  "imports": {
    "@podhmo/with-help": "jsr:@podhmo/with-help@^0.5.0",
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/collections": "jsr:@std/collections@^1.0.9",
    "@std/fs": "jsr:@std/fs@^1.0.5",
    "@std/jsonc": "jsr:@std/jsonc@^1.0.1",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@hono/hono": "jsr:@hono/hono@^4.6",
    "esbuild": "npm:esbuild@0.24.2"
  }
}
